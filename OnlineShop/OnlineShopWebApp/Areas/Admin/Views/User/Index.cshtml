@model List<User>

<div class="row">
    @await Html.PartialAsync("LeftMenu")
    <div class="col-9">
        <h1>Список пользователь</h1>
        @await Html.PartialAsync("AddUser", new UserViewModel())
        <div class="text-danger font-weight-bold" asp-validation-summary="All"></div>
        <table class="table table-bortered table-hover">
            <tr>
                <th>ID</th>
                <th>Логин</th>
                <th>Имя</th>
                <th>Фамилия</th>
                <th>Телефон</th>
                <th>Email</th>
            </tr>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.PhoneNumber</td>
                    <td>@user.Email</td>
                    @*<td>@user.Role?.NameRole</td>*@
                    <td><a asp-area="Admin" asp-controller="User" asp-action="Show" asp-route-userLogin="@user.UserName">Показать</a></td>
                </tr>
            }
        </table>
    </div>
</div>