@model ProductViewModal

<a data-toggle="modal" href="#AddProduct">Добавить новый продукт</a>

<!-- Modal -->
<div class="modal fade" id="AddProduct" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Добавление продукта</h5>
            </div>
            <form class="form" method="post" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="form-group">
                        <label class="control-label">Загрузить изображение</label>
                        <input type="file" name="UploadedFile" class="form-control" required />
                    </div>
                    <div class ="form-group">
                        <label asp-for="Name" class="control-label col-2">Наименование</label><br />
                        <input asp-for="Name" class="form-control col-10" name="Name" />
                        <span class="text-danger" asp-validation-for="Name" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Author" class="control-label col-2">Автор</label><br />
                        <input asp-for="Author" class="form-control col-10" name="Author" />
                        <span class="text-danger" asp-validation-for="Author" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Genre" class="control-label col-2">Жанр</label><br />
                        <input asp-for="Genre" class="form-control col-10" name="Genre" />
                        <span class="text-danger" asp-validation-for="Genre" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Cost" class="control-label col-2">Цена</label><br />
                        <input asp-for="Cost" class="form-control col-10" name="Cost" />
                        <span class="text-danger" asp-validation-for="Cost" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label col-2">Описание</label><br />
                        <input asp-for="Description" class="form-control col-10" name="Description" />
                        <span class="text-danger" asp-validation-for="Description" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-dark" asp-area="Admin" asp-controller="Product" asp-action="Add">Сохранить</button>
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Отмена</button>
                </div>
            </form>
        </div>
    </div>
</div>