@model UserViewModel


<a type="button" class="btn btn-danger" data-toggle="modal" href="#removeModel">
    Удалить
</a>

<!-- Modal -->
<div class="modal fade" id="removeModel" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="false">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Удаление</h5>
            </div>
            <div class="modal-body">
                <p>Вы точно хотите удалить данный продукт: @Model.Login</p>
            </div>
            <div class="modal-footer">
                <a asp-area="Admin" asp-controller="User" asp-action="Remove" asp-route-userLogin="@Model.Login" type="button" class="btn btn-danger">Удалить</a>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
            </div>
        </div>
    </div>
</div>
