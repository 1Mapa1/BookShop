@model List<ProductViewModal>;

<div class="row">
    @await Html.PartialAsync("LeftMenu")
    <div class="col-9">
        <h1>Список продуктов</h1>
        @await Html.PartialAsync("AddProduct", new ProductViewModal())
        <table class="table table-bortered table-hover">
            <tr>
                <th>ID</th>
                <th>Имя</th>
                <th>Автор</th>
                <th>Цена</th>
            </tr>
            @if (Model.Count != 0)
            {
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Id</td>
                        <td>@product.Name</td>
                        <td>@product.Author</td>
                        <td>@product.Cost</td>
                        <td>@await Html.PartialAsync("ShowProduct", product)</td>
                        <td>@await Html.PartialAsync("RedactProduct", product)</td>
                        <td>@await Html.PartialAsync("RemoveProduct", product)</td>
                    </tr>
                }
            }
        </table>
    </div>
</div>

