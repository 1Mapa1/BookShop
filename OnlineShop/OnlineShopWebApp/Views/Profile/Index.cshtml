@model UserDataViewModdel

<div class="row">
    @if (Model.ImgPath == null)
    {
        <img class="col-3 mr-5" src="/images/standart.png">
    }
    else
    {
        <img class="col-3 mr-5" src="@Model.ImgPath" />
    }
    <div class="col-8 mt-5">
        <h1>@User.Identity.Name</h1></>
    </div>
</div>
<a>@await Html.PartialAsync("RedactImgUser", new RedactImgUser(User.Identity.Name, Model.ImgPath))</a>
<hr />
<div>
    <form role="form" class="form" method="post">
        <h2>Личные данные</h2>
        <div class="row">
            <div class="form-group col-5">
                <label asp-for="LastName" class="control-label col-2">Фамилия</label>
                <input class="form-control col-10" name="LastName" value="@Model.LastName" asp-for="LastName" />
                <span class="text-danger" asp-validation-for="LastName" />
            </div>
            <div class="form-group col-6">
                <label asp-for="FirstName" class="control-label col-3">Имя</label>
                <input class="form-control col-10" name="FirstName" value="@Model.FirstName" asp-for="FirstName" />
                <span class="text-danger" asp-validation-for="FirstName" />
            </div>
        </div>
        <div class="row">
            <div class="form-group col-5">
                <label asp-for="PhoneNumber" class="control-label col-2">Телефон</label>
                <input class="form-control col-10" name="PhoneNumber" value="@Model.PhoneNumber" asp-for="PhoneNumber" />
                <span class="text-danger" asp-validation-for="PhoneNumber" />
            </div>
            <div class="form-group col-6">
                <label asp-for="Email" class="control-label col-3">E-mail</label>
                <input class="form-control col-10" name="Email" value="@Model.Email" asp-for="Email" />
                <span class="text-danger" asp-validation-for="Email" />
            </div>
        </div>
        <div class="btn-group">
            <button type="submit" class="btn btn-dark mr-3" asp-area="" asp-controller="Profile" asp-action="SaveData">Сохранить данные</button>
            <a class="btn btn-danger" asp-controller="Profile" asp-action="LogOut">Выйти из аккаунта</a>
        </div>
    </form>
</div>
<hr />
<div>
    @await Component.InvokeAsync("OrderList")
</div>
