@model Login
<form method="post">
    <div align="center" class="mt-5">
        <div>
            <h5 class="mb-3">Вход</h5>
            <div class="validation text-danger" asp-validation-summary="ModelOnly"></div>
            <input type="hidden" name="returnUrl" value="@Model.ReturnUrl">
            <input asp-for="LoginUser" class="form-control mb-2" name="LoginUser" placeholder="Логин" style="width: 300px" />
            <span asp-validation-for="LoginUser" class="text-danger"></span>

            <input type="password" asp-for="Password" class="form-control" name="Password" placeholder="Пароль" style="width: 300px; line-height: 50%" />
            <span asp-validation-for="Password" class="text-danger"></span>

        </div>
        <div class="custom-checkbox mt-2 mb-4">
            <label>
                <input type="checkbox" class="text-dark" name="Remember" value="true" />
                Запомнить меня?
            </label>
        </div>
        <div>
            <input type="submit" class="btn btn-dark" asp-controller="Profile" asp-action="VerifyData" value="Войти">
        </div>
        <div class="form-group text mt-1 text-dark">
            <small><a asp-controller="Profile" asp-action="Registration" asp-route-returnUrl="@Model.ReturnUrl" class="mr-2">Регистрация</a> <a href="#">Забыли пароль?</a></small>
        </div>
    </div>
</form>
